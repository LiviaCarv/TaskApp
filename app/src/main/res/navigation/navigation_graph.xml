<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.project.taskapp.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_taskListFragment"
            app:destination="@id/taskListFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/formTaskFragment"
        android:name="com.project.taskapp.ui.FormTaskFragment"
        android:label="fragment_form_task"
        tools:layout="@layout/fragment_form_task" >
        <argument
            android:name="task"
            app:argType="com.project.taskapp.data.model.Task"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.project.taskapp.ui.TaskListFragment"
        android:label="fragment_task_list"
        tools:layout="@layout/fragment_task_list" >
        <action
            android:id="@+id/action_taskListFragment_to_formTaskFragment"
            app:destination="@id/formTaskFragment" />
    </fragment>
</navigation>